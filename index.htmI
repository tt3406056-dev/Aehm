            if (savedTheme === 'dark') {
                document.body.classList.add('dark-mode');
                modeIcon.textContent = '☀️';
                autoDarkModeCheckbox.checked = true;
            } else {
                modeIcon.textContent = '🌙';
                autoDarkModeCheckbox.checked = false;
            }
            
            // تحقق من حالة الدخول
            const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
            
            if (isLoggedIn) {
                loginScreen.style.display = 'none';
                mainAppContainer.style.display = 'block';
                
                // إظهار الأزرار الجانبية عند التحميل إذا كان مسجلاً دخوله
                modeToggle.style.display = 'flex';
                profileButton.style.display = 'flex'; 
                supportFab.style.display = 'flex';
                
                // التأكد من إزالة فئة الإخفاء في البداية
                modeToggle.classList.remove('hidden');
                profileButton.classList.remove('hidden');
                supportFab.classList.remove('hidden');
                
                updateProfileModal();
            } else {
                loginScreen.style.display = 'block';
                mainAppContainer.style.display = 'none';
                
                // التأكد من إخفاء الأزرار عند شاشة الدخول
                modeToggle.style.display = 'none';
                profileButton.style.display = 'none';
                supportFab.style.display = 'none';
            }
            
            // تهيئة قائمة الأقسام عند التحميل لأول مرة
            if (sectionsContainer) {
                 populateSections();
            }
        });

        // إغلاق النافذة عند النقر خارجها
        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                closeModal(event.target.id);
            }
        }
        
        // ربط زر تبديل الوضع الخارجي بدالة التبديل
        modeToggle.addEventListener('click', toggleDarkMode);
        
        // ربط دالة المحاكاة بحدث الضغط على زر الإرسال (تم ربطها بزر الإرسال و Enter في الـ HTML)

    </script>
</body>
</html>
